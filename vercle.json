{
  "version": 2,
  "builds": [
    { "src": "**/*.php", "use": "vercel-php@0.7.0" },
    { "src": "public/css/*.css", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/public/css/(.*)", "dest": "/public/css/$1" },
    { "src": "/(.*).php", "dest": "/$1.php" },
    { "src": "/", "dest": "/index.php" }
  ]
}
